<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="12dp"/>
            <stroke android:width="0.8dp" android:color="@android:color/white"/>
            <gradient android:type="linear" android:startColor="@android:color/transparent" android:centerY="0.8"
                android:endColor="@android:color/transparent"
                android:angle="270"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="12dp"/>
            <stroke android:width="0.8dp" android:color="@android:color/white"/>
            <gradient android:type="linear" android:startColor="@android:color/transparent" android:centerY="0.8"
                android:endColor="@android:color/transparent"
                android:angle="270"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="12dp"/>
            <stroke android:width="0.8dp" android:color="@android:color/white"/>
            <gradient android:type="linear" android:startColor="@android:color/transparent" android:centerY="0.8"
                android:endColor="@android:color/transparent"
                android:angle="270"/>
        </shape>
    </item>

</selector>