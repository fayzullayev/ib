<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="12dp"/>
            <stroke android:width="0.8dp" android:color="#50ffffff"/>
            <gradient android:type="linear" android:startColor="#50ffffff" android:centerY="0.8"
                android:endColor="#50ffffff"
                android:angle="270"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="12dp"/>
            <stroke android:width="0.8dp" android:color="#ffffff"/>
            <gradient android:type="linear" android:startColor="#ffffff" android:centerY="0.8"
                android:endColor="#ffffff"
                android:angle="270"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="12dp"/>
            <stroke android:width="0.8dp" android:color="#ffffff"/>
            <gradient android:type="linear" android:startColor="#ffffff" android:centerY="0.8"
                android:endColor="#ffffff"
                android:angle="270"/>
        </shape>
    </item>

</selector>